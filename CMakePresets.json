{
    "version": 8,
    "configurePresets": [
        {
            "name": "MSYS2 UCRT gcc DBG",
            "hidden": false,
            "inherits": [
                "gcc DBG",
                "InComs"
            ]
        },
        {
            "name": "MSYS2 UCRT gcc REL",
            "hidden": false,
            "inherits": [
                "gcc REL",
                "InComs"
            ],
            "cacheVariables": {
                "CMAKE_EXE_LINKER_FLAGS": "-static-libgcc -static-libstdc++ -Wl,-Bstatic,--whole-archive -lwinpthread -Wl,-Bdynamic,--no-whole-archive"
            }
        },
        {
            "name": "gcc DBG",
            "hidden": false,
            "inherits": [
                "_common",
                "_gcc"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "gcc REL",
            "hidden": false,
            "inherits": [
                "_common",
                "_gcc"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "clang DBG",
            "hidden": false,
            "inherits": [
                "_common",
                "_clang"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "clang REL",
            "hidden": false,
            "inherits": [
                "_common",
                "_clang"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "_common",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "_gcc",
            "hidden": true,
            "description": "Using: C = gcc.exe, CXX = g++.exe",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "_clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "InComs",
            "hidden": true,
            "environment": {
                "PATH": "C:/msys64/ucrt64/bin;$penv{PATH}"
            }
        }
    ]
}